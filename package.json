{
  "name": "elenweave-app",
  "version": "0.1.0-beta.3",
  "description": "Local visual canvas app for humans and coding agents.",
  "type": "module",
  "bin": {
    "elenweave-app": "server/cli.js"
  },
  "scripts": {
    "server": "node server/index.js",
    "server:cli": "node server/cli.js",
    "start": "npm run server",
    "dev": "node --watch server/index.js",
    "pack:check": "npm pack --dry-run",
    "desktop:install": "npm --prefix desktop install",
    "desktop:dev": "npm --prefix desktop run dev",
    "desktop:pack": "npm --prefix desktop run pack",
    "desktop:build:win": "npm --prefix desktop run build:win"
  },
  "files": [
    "app",
    "!app/favicons",
    "!app/logo.png",
    "!app/favicon.ico",
    "!app/favicon-*.png",
    "!app/apple-touch-icon.png",
    "!app/android-chrome-*.png",
    "!app/site.webmanifest",
    "server",
    "README.md"
  ],
  "publishConfig": {
    "access": "public",
    "tag": "beta"
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "electron": "^40.4.1"
  }
}
