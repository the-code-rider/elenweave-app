{
  "name": "elenweave-desktop",
  "version": "0.1.0-beta.1",
  "private": true,
  "description": "Desktop shell for running Elenweave locally with agent-accessible localhost API.",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "build:win": "electron-builder --win nsis"
  },
  "devDependencies": {
    "electron": "^30.5.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "net.luckysingh.elenweave.desktop",
    "productName": "Elenweave",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../app",
        "to": "app",
        "filter": [
          "**/*",
          "!favicons/**"
        ]
      },
      {
        "from": "../server",
        "to": "server",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "./package.runtime.json",
        "to": "package.json"
      },
      {
        "from": "../README.md",
        "to": "README.md"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
